{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Java Class API Definition",
  "description": "Schema for Java class definitions used in Ignition Jython scripts",
  "type": "object",
  "required": ["package", "classes"],
  "properties": {
    "package": {
      "type": "string",
      "description": "The Java package name (e.g., 'java.lang', 'java.util')"
    },
    "classes": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "description"],
        "properties": {
          "name": {
            "type": "string",
            "description": "Simple class name (e.g., 'String', 'URL')"
          },
          "description": {
            "type": "string",
            "description": "Brief class description"
          },
          "constructors": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["signature", "description"],
              "properties": {
                "signature": {
                  "type": "string",
                  "description": "Constructor signature (e.g., 'String(bytes, charset)')"
                },
                "params": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "required": ["name", "type", "description"],
                    "properties": {
                      "name": {"type": "string"},
                      "type": {"type": "string"},
                      "description": {"type": "string"}
                    }
                  }
                },
                "description": {"type": "string"}
              }
            }
          },
          "methods": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["name", "signature", "description"],
              "properties": {
                "name": {"type": "string"},
                "signature": {"type": "string"},
                "params": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "required": ["name", "type", "description"],
                    "properties": {
                      "name": {"type": "string"},
                      "type": {"type": "string"},
                      "description": {"type": "string"}
                    }
                  }
                },
                "returns": {
                  "type": "object",
                  "properties": {
                    "type": {"type": "string"},
                    "description": {"type": "string"}
                  }
                },
                "description": {"type": "string"},
                "static": {"type": "boolean", "default": false},
                "deprecated": {"type": "boolean", "default": false}
              }
            }
          },
          "fields": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["name", "type", "description"],
              "properties": {
                "name": {"type": "string"},
                "type": {"type": "string"},
                "description": {"type": "string"},
                "static": {"type": "boolean", "default": false},
                "final": {"type": "boolean", "default": false}
              }
            }
          },
          "deprecated": {"type": "boolean", "default": false},
          "docs_url": {
            "type": "string",
            "format": "uri",
            "description": "Link to official Java documentation"
          }
        }
      }
    }
  }
}
